<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.AccountPage"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Hgebruiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Gebruikersnaam:"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PersonGebruikersnaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KarelDeGrote"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/HEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PersonEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kareldegrote@dingen.nl"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Hname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Voornaam:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PersonFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karel"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HLname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Achternaam:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PersonLName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Grote"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/HBdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Telefoonnummer"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PersonBdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/colorPrimary"
        android:text="06-123456"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="0"
        android:gravity="center|top|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ChangeCredentialsLayout">


        <TextView
            android:id="@+id/patientName"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Verander credentials"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text=">"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="0"
        android:gravity="center|top|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ChangePWLayout">


        <TextView
            android:id="@+id/veranderPW"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Verander wachtwoord"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text=">"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/ManageGebruikersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="0"
        android:gravity="center|top|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ManageGebruikers"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Manage gebruikers"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text=">"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray" />

    <Button
        android:id="@+id/BTNlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_shape"
        android:text="Logout"
        android:textColor="@color/white"
        android:stateListAnimator="@null"/>

</LinearLayout>